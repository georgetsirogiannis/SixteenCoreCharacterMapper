<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="SixteenCoreCharacterMapper.Avalonia.SimpleMessageBox"
        Title="Message" Width="300" SizeToContent="Height"
        WindowStartupLocation="CenterOwner" CanResize="False"
        Icon="/Assets/16Core logo icon v2.png">
    <StackPanel Margin="20">
        <TextBlock Name="MessageText" TextWrapping="Wrap" Margin="0,0,0,20"/>
        <StackPanel Name="ButtonsPanel" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <!-- Buttons added in code -->
        </StackPanel>
    </StackPanel>
</Window>
