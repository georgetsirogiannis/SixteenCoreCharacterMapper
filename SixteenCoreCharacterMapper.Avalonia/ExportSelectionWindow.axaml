<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SixteenCoreCharacterMapper.Avalonia"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
        Width="400" Height="500"
        x:Class="SixteenCoreCharacterMapper.Avalonia.ExportSelectionWindow"
        Title="Export Selection"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
  <Grid RowDefinitions="Auto,*,Auto" Margin="20">
    <StackPanel Grid.Row="0" Spacing="10">
      <TextBlock Name="TitleText" Text="Export Options" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
      <RadioButton Name="AllCharactersRadio" GroupName="ExportOptions" Content="Export All Characters" IsChecked="True" Checked="Radio_Checked"/>
      <StackPanel Orientation="Horizontal" Spacing="10">
        <RadioButton Name="CategoryRadio" GroupName="ExportOptions" Content="Export Category:" Checked="Radio_Checked" VerticalAlignment="Center"/>
        <ComboBox Name="CategoryComboBox" Width="150" SelectedIndex="0" IsEnabled="False">
          <ComboBoxItem>Main</ComboBoxItem>
          <ComboBoxItem>Supporting</ComboBoxItem>
          <ComboBoxItem>Background</ComboBoxItem>
        </ComboBox>
      </StackPanel>
      <RadioButton Name="SelectCharactersRadio" GroupName="ExportOptions" Content="Select Characters to Export" Checked="Radio_Checked"/>
    </StackPanel>

    <Border Name="ListBorder" Grid.Row="1" Margin="0,10" BorderThickness="1" CornerRadius="3">
      <ListBox Name="CharactersList" SelectionMode="Multiple">
        <ListBox.ItemTemplate>
          <DataTemplate x:DataType="local:ExportSelectionItem">
            <CheckBox IsChecked="{Binding IsSelected}" Content="{Binding Character.Name}"/>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Border>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
      <Button Name="CancelButton" Content="Cancel" Click="Cancel_Click" Width="80" HorizontalContentAlignment="Center"/>
      <Button Name="ExportButton" Content="Export" Click="Export_Click" Width="80" HorizontalContentAlignment="Center" Classes="accent"/>
    </StackPanel>
  </Grid>
</Window>
