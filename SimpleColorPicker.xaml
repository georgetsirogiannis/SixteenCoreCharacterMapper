<UserControl x:Class="SixteenCoreCharacterMapper.SimpleColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="Root">
    <StackPanel>
        <Rectangle Height="50" Margin="5">
            <Rectangle.Fill>
                <SolidColorBrush Color="{Binding ElementName=Root, Path=SelectedColor}" />
            </Rectangle.Fill>
        </Rectangle>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="RLabel" Text="R:" VerticalAlignment="Center" Margin="0,0,5,0" Grid.Row="0" Grid.Column="0"/>
            <Slider Name="SliderR" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" Grid.Row="0" Grid.Column="1"/>
            <TextBlock x:Name="GLabel" Text="G:" VerticalAlignment="Center" Margin="0,0,5,0" Grid.Row="1" Grid.Column="0"/>
            <Slider Name="SliderG" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" Grid.Row="1" Grid.Column="1"/>
            <TextBlock x:Name="BLabel" Text="B:" VerticalAlignment="Center" Margin="0,0,5,0" Grid.Row="2" Grid.Column="0"/>
            <Slider Name="SliderB" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" Grid.Row="2" Grid.Column="1"/>
        </Grid>
    </StackPanel>
</UserControl>